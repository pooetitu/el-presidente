<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<VBox alignment="TOP_CENTER" prefHeight="600.0" prefWidth="800.0" spacing="25.0" styleClass="menu-background"
      stylesheets="@style.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.presidente.display.controller.MainMenuController">
    <ImageView fitHeight="156.0" fitWidth="369.0" pickOnBounds="true" preserveRatio="true">
        <VBox.margin>
            <Insets bottom="50.0" />
        </VBox.margin>
        <Image url="@images/title.png" />
    </ImageView>
    <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#switchToGameCreationMenu" prefWidth="150.0" text="Start new game" textAlignment="CENTER" textFill="#386838" textOverrun="CENTER_ELLIPSIS">
        <font>
            <Font name="Stencil" size="14.0" />
        </font>
    </Button>
    <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#switchToLoadSaveMenu" prefWidth="150.0" text="Load save" textFill="#833838" textOverrun="CENTER_ELLIPSIS">
        <font>
            <Font name="Stencil" size="14.0" />
        </font>
    </Button>
    <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#buttonLeaveAction" prefWidth="150.0" text="Leave game" textAlignment="CENTER" textFill="#2a454a" textOverrun="CENTER_ELLIPSIS">
        <font>
            <Font name="Stencil" size="14.0" />
        </font>
    </Button>
</VBox>
